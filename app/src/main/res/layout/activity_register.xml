<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xtilyna.booksbay.booksbay.register.ui.RegisterActivity"
    android:padding="10dp"
    android:gravity="center">

    <com.xtilyna.booksbay.booksbay.Utils.NonSwipeableViewPager
        android:id="@+id/viewpager_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    </com.xtilyna.booksbay.booksbay.Utils.NonSwipeableViewPager>

    <TextView
        android:id="@+id/already_have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_have_an_account"
        android:layout_above="@+id/sign_in_btn"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/sign_in_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/sign_in"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ripple_main"/>


</RelativeLayout>
